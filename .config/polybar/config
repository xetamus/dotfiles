[module/brightness]
type = custom/script
exec = python3 -c "print( round( $(brightnessctl -d gmux_backlight g)/ $(brightnessctl -d gmux_backlight m) * 100))"
tail = true
interval = 1

format = <label>
format-background = ${color.black}
format-foreground = ${color.lblue}
label =  %output%%


