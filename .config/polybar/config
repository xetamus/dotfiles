[module/battery]
type = internal/battery

full-at = 99

; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADPI

poll-interval = 2
time-format = %H:%M

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>
format-charging-padding = 2

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-discharging>
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 0

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-full = <label-full>
format-full-padding = 0

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = %percentage%%

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = "%percentage%%  "
label-discharging-foreground = ${color.bg}
ramp-capacity-foreground = ${color.bg}

; Available tokens:
;   %percentage% (default)
;label-full = Fully Charged
label-full = "%{B#379b6a}   %percentage%%  "
label-full-foreground = ${color.bg}

ramp-capacity-0 = %{B#bd574e}  
ramp-capacity-1 = %{B#c2684c}  
ramp-capacity-2 = %{B#c77a49}  
ramp-capacity-3 = %{B#c99841}  
ramp-capacity-4 = %{B#d5ae42}  
ramp-capacity-5 = %{B#b4a84a}  
ramp-capacity-6 = %{B#909e4e}  
ramp-capacity-7 = %{B#749d57}  
ramp-capacity-8 = %{B#53985e}  
ramp-capacity-9 = %{B#379b6a}  

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-5 = 
animation-charging-6 = 

; Framerate in milliseconds
animation-charging-framerate = 750

